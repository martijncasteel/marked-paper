# Script to re-create docker for chat server
# Kills and removes the old server, then rebuilds it and starts the new container
#
docker container kill chat-server
docker container rm chat-server

docker build -t martijncasteel/marked-paper .
docker run -p 3000:80 --name chat-server --restart unless-stopped -v ${pwd}/share:/share -d martijncasteel/marked-paper
